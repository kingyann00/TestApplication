<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="@dimen/basic_margin"

    >
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/basic_margin"
    android:padding="@dimen/basic_margin"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:cardCornerRadius="12dp"
    app:cardElevation="5dp"
    >

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >


    <ImageView
        android:id="@+id/campaign_Image"
        android:layout_width="@dimen/list_image"
        android:layout_height="@dimen/list_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/campaign_img_test" />

    <TextView
        android:id="@+id/campaignTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/basic_margin"
        android:fontFamily="@font/roboto_black"
        android:text="@string/campaign_title"
        android:textColor="@color/color_2"

        app:layout_constraintStart_toEndOf="@+id/campaign_Image"
        app:layout_constraintTop_toTopOf="@+id/campaign_Image"
        android:layout_marginTop="@dimen/basic_margin"/>

    <ImageView
        android:id="@+id/location_icon"
        android:layout_width="@dimen/small_description"
        android:layout_height="@dimen/small_description"


        app:layout_constraintBottom_toBottomOf="@+id/campaign_Image"
        app:layout_constraintStart_toStartOf="@+id/campaignTitle"

       android:layout_marginBottom="@dimen/basic_margin"
        app:srcCompat="@drawable/ic_baseline_location_on_24" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Kuala Lumpur Branch"
        android:textColor="@color/color_description"
        android:textSize="@dimen/tiny_description"
        app:layout_constraintBottom_toBottomOf="@+id/location_icon"
        app:layout_constraintStart_toEndOf="@+id/location_icon" />

    <TextView
        android:id="@+id/campaign_dateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="9/22/2022 18:00:00"
        android:textColor="@color/color_description"
        android:textSize="@dimen/tiny_description"
        app:layout_constraintBottom_toBottomOf="@+id/location_icon"
        app:layout_constraintEnd_toEndOf="parent"
         />



</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>