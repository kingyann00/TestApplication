<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_black"
        android:text="Layout Navigation"
        android:textSize="@dimen/title_size"
        android:layout_marginBottom="@dimen/medium_spacing_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/donor_campaign_create_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"


        android:fontFamily="@font/roboto_black"
        android:paddingTop="@dimen/basic_margin"
        android:paddingBottom="@dimen/basic_margin"
        android:text="Create Donor Campaign"
        android:textSize="@dimen/title_size"

        app:backgroundTint="@color/color_1"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/donor_campaign_list_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"


        android:fontFamily="@font/roboto_black"
        android:paddingTop="@dimen/basic_margin"
        android:paddingBottom="@dimen/basic_margin"
        android:text="Donor Campaign List"
        android:textSize="@dimen/title_size"

        app:backgroundTint="@color/color_1"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/donor_campaign_create_button" />

    <Button
        android:id="@+id/donorCampaignDetailButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"


        android:fontFamily="@font/roboto_black"
        android:paddingTop="@dimen/basic_margin"
        android:paddingBottom="@dimen/basic_margin"
        android:text="Donor Campaign Detail"

        android:textSize="@dimen/title_size"

        app:backgroundTint="@color/color_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/donor_campaign_list_button" />
    <Button
        android:id="@+id/admincampaignlistButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"


        android:fontFamily="@font/roboto_black"
        android:paddingTop="@dimen/basic_margin"
        android:paddingBottom="@dimen/basic_margin"
        android:text="Admin Campaign List"

        android:textSize="@dimen/title_size"

        app:backgroundTint="@color/color_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/donorCampaignDetailButton" />


